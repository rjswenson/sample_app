<% provide(:title, @user.name) %>
<h1>Come look at the user!</h1>
<div class="row">
  <aside class="span4">
    <section> 
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3> Microposts (<%= @user.microposts.count %>) </h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
